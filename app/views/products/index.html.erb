<h1>All Products</h1>


<table class="table">
  <tr>
    <th>Name of the Product</th>
    <th>Description of the Product</th>
    <th>Price in USD</th>
    <th>Image of the Product</th>
  </tr>
    <% @products.each do |product| %>
      <tr>
        <td>: <%= product.name %></a></td>
        <td>: <%= product.description %></td>
        <td>: <%= product.price %></td>
        <td><img src="<%= product.image %>"></td>
      </tr>
    <% end %>
</table>



