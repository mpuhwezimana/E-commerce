<div id="myCarousel" style="width: 100%; height: 10;"  class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img class="first-slide" src="http://shop.scouts.org.uk/images/Product/medium/105536.jpg" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Get a Scout Shop Account</h1>
              <p>By signing up, you will be able to buy anything on this web application. Sign up using your email address now.</p>
              <p><a class="btn btn-lg btn-primary" href="/signup" role="button">Sign up today</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="second-slide" src="http://shop.scouts.org.uk/images/Product/medium/106884.jpg" alt="Second slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Your Shopping Cart!!!</h1>
              <p>Click on the link below to access your shopping cart. Add some products to your shopping cart too before buying.</p>
              <p><a class="btn btn-lg btn-primary" href="/carted_products" role="button">Shopping Cart</a></p>
            </div>
          </div>
        </div>
        <div class="item">
          <img class="third-slide" src="http://shop.scouts.org.uk/images/Product/medium/107756.jpg" alt="Third slide">
          <div class="container">
            <div class="carousel-caption">
              <h1>Visit Rwanda Scouts Association Website</h1>
              <p>Click on the link below to go back to the Rwanda Association Website.</p>
              <p><a class="btn btn-lg btn-primary" href="http://localhost:3000/" target="_blank"" role="button">Rwanda Scouts</a></p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div><br>

<div class="container">
  <% @products.each_slice(3) do |three_products| %>
    <div class="row">
      <% three_products.each do |product| %>
        <div class="col-md-4">
            <div class="product-item">
              <div class="pi-img-wrapper">
                <img src="<%= product.image1 %>" class="img-responsive" alt="Berry Lace Dress">
              </div>
              <h3><%= link_to product.name, "/products/#{product.id}" %></h3>
              <div class="pi-price">$<%= product.price %></div>
              <a href="javascript:;" class="btn add2cart">Add to cart</a>
              <% if product.created_at > 1.day.ago%>
                <div class="sticker sticker-new"></div>
              <% end %>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>