<h1>Edit this product:</h1>

<ul>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <li class="errors"><%= message %></li> 
    <% end %>
  <% end %>
</ul>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Price: <input type="text" name="price" value="<%= @product.price %>">
  </div>
  <div>
    Supplier: <input type="text" name="supplier" value="<%= @product.supplier %>">
  </div>
  <div>
    Image: <input type="text" name="image1" value="<%= @product.image1 %>">
  </div>
  <div>
    Image: <input type="text" name="image2" value="<%= @product.image2 %>">
  </div>
  <div>
    Image: <input type="text" name="image3" value="<%= @product.image3 %>">
  </div>
  <div>
    <input type="submit" value="Update Product">
  </div>
<% end %>