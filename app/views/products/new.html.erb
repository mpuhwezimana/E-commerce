<h1>New product to be sold:</h1>

<ul>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <li class="errors"><%= message %></li> 
    <% end %>
  <% end %>
</ul>

<%= form_tag "/products", method: :post do %>
  <div>
    Name: <input type="text" name="name">
  </div>
  <div>
    Description: <input type="text" name="description">
  </div>
   <div>
    Price: <input type="text" name="price">
  </div>
  <div>
    Supplier: <input type="text" name="supplier">
  </div>
  <div>
    Image 1: <input type="text" name="image1">
  </div>
  <div>
    Image 2: <input type="text" name="image2">
  </div>
  <div>
    Image 3: <input type="text" name="image3">
  </div>
  <div>
    <input type="submit" name="Create Product">
  </div>
<% end %>