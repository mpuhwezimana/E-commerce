<!DOCTYPE html>
<html>
  <head>
    <title> Ecommerce</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
  </head>

  <body>
    <% flash.each do |name, message| %>
      <div class="alert alert-<%= name %>" role="alert"><%= message %></div>
    <%end%>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Home</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">

            <li><a class="white" href="/products">All Products</a></li>
            <li class="dropdown">
              <a href="#" class="white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Products <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/products">All Products</a></li>
                <li><a href="/products?sort=asc">Price Lowest To Highest<span class="sr-only">(current)</span></a></li>
                <li><a href="/products?sort=desc">Price Highest To Lowest<span class="sr-only">(current)</span></a></li>
                <li><a href="/products?filter=discount">Discount Items<span class="sr-only">(current)</span></a></li>
                <li><a href="/products/random">Random Product</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/products/new">New Product</a></li>
              </ul>
            </li>
          </ul>

           <%= form_tag "/products/search", class: "navbar-form navbar-left", method: :post do %>
              <div class="form-group">
              <input type="text" class="form-control" placeholder="Search" name="search_input">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
          <% end %>

          <ul class="nav navbar-nav navbar-right">
            <li class= "white"><a href="#">Apple Store</a></li>
            <li class="dropdown">
              <a href="#" class="white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User <span class="caret"></span></a>
              <ul class="dropdown-menu">
              <% if current_user%> 
                <li><a href="logout">Logout</a></li>
              <% else %>
                <li><a href="/signup">Signup</a></li>
                <li><a href="/login">Login</a></li>
              <% end %>
                <li role="separator" class="divider"></li>
                <li><a href="#">Profile</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
  </nav>
  <nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <p> @Copyright reserved to Apple Store Rwanda</p>            
  </div>
  </nav>
      <%= yield %>
    </div>
  </body>
</html>